# Source: https://www.nano-editor.org/dist/latest/nano.html#Settings

# цвета
# [bold,][italic,] pink, purple, mauve, lagoon, mint, lime, peach, orange,
# latte, rosy, beet, plum, sea, sky, slate, teal, sage, brown,
# ocher, sand, tawny, brick, crimson, и normal, red


# подключение стандартного набора подсветки синтаксиса
include "/usr/share/nano/*.nanorc"
include "/usr/share/nano/extra/*.nanorc"

set mouse      # включает поддержку мыши
set smarthome  # поддержка key home on keyboard

# Нумерация строк
set linenumbers # включить слева
set numbercolor italic,plum # цвет

# Перенос строк
set softwrap       # автоматический перенос строк
set atblanks       # мягкий перенос строк по пробелам и табам
# set breaklonglines # сокращение длинных строк в одну строку

# полосы прокрутки
set indicator # включить
set scrollercolor peach,lagoon # цвета 1,2

set autoindent # авто отступ
set trimblanks # автоматическое удаление пробелов по краям
set tabsize 4 # размер табуляции
# set tabstospaces # преобразовывает табы в пробелы

set emptyline # пустая строка в начале
set statuscolor mint,black # цвет строки состояния
set constantshow  # отображает позицию курсора в строке состояние
set titlecolor black,yellow # цвет заголовка
set stateflags # используйте правый верхний угол экрана для отображения некоторых флагов состояния
set promptcolor mint # цвет подсказки
set selectedcolor white,blue # цвет выделения текста


# set saveonexit # авто сохранение при выходе (^X)

# set keycolor red,green # цвет функций
# set functioncolor white,black # цвет названий функций
# set errorcolor white,red # цвет ошибки

